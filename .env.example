# ===========================================
# Polymarket Copy-Trading Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=polymarket
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=polymarket_bot
POSTGRES_PORT=5432
DATABASE_URL=postgresql://polymarket:your_secure_password_here@localhost:5432/polymarket_bot

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# ===========================================
# Polymarket API Configuration
# ===========================================
# Network: 'mainnet' or 'testnet'
POLYMARKET_NETWORK=mainnet

# API URLs
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com

# API Credentials (get from Polymarket)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_api_passphrase_here

# ===========================================
# Bot Wallet Configuration
# ===========================================
# Your bot's wallet address
BOT_WALLET_ADDRESS=0x...

# Encrypted private key (use scripts/encrypt-key.ts to generate)
BOT_WALLET_ENCRYPTED_KEY=encrypted_key_here

# Encryption key for decrypting the private key
# IMPORTANT: Keep this secure and never commit!
ENCRYPTION_KEY=your_encryption_password_here

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000

# API URLs (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ===========================================
# Optional: Notifications
# ===========================================
# Webhook URL for trade notifications (Discord, Slack, etc.)
# WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram Bot (optional)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
